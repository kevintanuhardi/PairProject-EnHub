<%- include ../../partials/header.ejs %>

<div class="container container-fluid">
    <h1>My Transactions</h1>
    <%if (msg) { %>
    <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
            <%- msg %>
    </div>
    <% } %>

    <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>  
                    <th scope="col">Talent Id</th> 
                    <th scope="col">Talent Name</th> 
                    <th scope="col">Rate</th> 
                </tr>
            </thead>
            <tbody>
                <% for(let i = 0; i < data.length; i++){ %>
                    <tr>
                        <td><%-data[i].id%></td>
                        <td><%-data[i].TalentId%></td>
                        <td><%-data[i].Talent.name%></td>
                        <% if(data[i].Talent.rating === null){ %>
                            <td>
                                <form class="form-inline" action="/users/transactions/<%-data[i].id%>" method="POST">
                                        <input type="text" class="form-control" id="rating" placeholder="Enter rating" name="rating">
                                    <input type="submit" class="btn btn-default" value="Rate">
                                </form>

                            </td>
                        <% } else {%>
                            <td><%-data[i].Talent.rating%></td>
                        <% } %>
                    </tr>
    
                <% } %>
            </tbody>
        </table>  

</div>
</body>
</html>